<%= form_for(user) do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user
            from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field form-group">
      <%= f.label :password_digest %>
      <%= f.text_field :password_digest %>
    </div>


    <%= button_tag(type: 'submit', class: 'actions btn btn-primary') do %>
        <i class="icon-ok icon-white"></i> Save Keystore
    <% end %>

<% end %>
