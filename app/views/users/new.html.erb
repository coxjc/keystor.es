<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

    <div class="form-group">
      Name: <%= f.text_field :name, class: 'form-control' %> <br>
    </div>
    <div class="form-group">
      Email: <%= f.text_field :email, class: 'form-control' %> <br>
    </div>
    <div class="form-group">
      Password: <%= f.password_field :password, class: 'form-control' %> <br>
    </div>
    <div class="field form-group">
      Password Confirmation: <%= f.password_field :password_confirmation,
                                                  class: 'form-control'
    %> <br>
    </div>
    <div class="form-group">
      <%= button_tag(type: 'submit', class: 'actions btn btn-primary') do %>
          <i class="icon-ok icon-white"></i> Sign Up!
      <% end %>
    </div>

<% end %>
