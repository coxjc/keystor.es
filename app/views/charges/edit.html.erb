<div class="container">
  <% if current_user && current_user.stripe_end_date && current_user
      .stripe_end_date >= Date.today %>
      <div class="jumbotron">
        <h3>Your payment is up to date. You will be charged on <%= current_user
                                                                   .stripe_end_date %>
          .
        </h3>
      </div>
  <% end %>
  <div style="text-align: center">
    <%= form_tag '/charges/edit', :method => :post do %>
        <article>
          <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
          <% end %>
          <label class="amount">
            <span>Update Card</span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-locale="auto"></script>
        </div>
    <% end %>

    </div>
